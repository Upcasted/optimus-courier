{
    "name": "upcasted/optimus-courier",
    "description": "Optimus Courier WooCommerce integration",
    "type": "wordpress-plugin",
    "license": "GPL-2.0+",
    "require": {
        "php": ">=8.0"
    },
    "require-dev": {
        "setasign/fpdf": "1.8.2",
        "setasign/fpdi": "2.3.6",
        "coenjacobs/mozart": "^0.7.1"
    },
    "autoload": {
        "psr-4": {
            "Upcasted\\OptimusCourier\\": "src/",
            "OptimusCourier\\Dependencies\\": "src/Dependencies/"
        },
        "classmap": [
            "src/Dependencies"
        ]
    },
    "extra": {
        "mozart": {
            "dep_namespace": "OptimusCourier\\Dependencies\\",
            "dep_directory": "/src/Dependencies/",
            "classmap_directory": "/src/Dependencies/",
            "classmap_prefix": "OptimusCourier_",
            "packages": [
                "setasign/fpdf",
                "setasign/fpdi"
            ]
        }
    },
    "scripts": {
        "fix-perms": [
            "chmod +x vendor/bin/mozart || true"
        ],
        "generate-deps": [
            "@fix-perms",
            "php vendor/bin/mozart compose"
        ],
        "post-install-cmd": [
            "@generate-deps"
        ],
        "post-update-cmd": [
            "@generate-deps"
        ],
        "build": [
            "composer install --no-dev --optimize-autoloader",
            "@generate-deps"
        ]
    },
    "authors": [
        {
            "name": "Andrei Rebenciuc",
            "email": "andrei@upcasted.com"
        }
    ]
}
